{
  "version": 2,
  "builds": [
    {
      "src": "api/proxy.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/hls/(.*)",
      "dest": "/api/proxy.js?url=$1"
    }
  ],
  "headers": [
    {
      "source": "/",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        },
        {
          "key": "Link",
          "value": "</>; rel=canonical"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/livetv.html",
      "destination": "/",
      "permanent": true
    }
  ]
}
